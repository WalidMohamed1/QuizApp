<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--___________________Scroll View To scroll easily_____________________-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">


        <!--___________________First Question_____________________-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q1.Which is the smallest country in the world"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/group1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bahrain"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vatican"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qatar"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Japan"
                android:textStyle="bold" />
        </RadioGroup>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#4D5157" />


        <!--___________________Seconds Question_____________________-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q2.How many hearts does an octopus have"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/group2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/r11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                android:textStyle="bold" />
        </RadioGroup>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#4D5157" />


        <!--___________________Third Question_____________________-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q3.Who is the inventor of the calculator"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/group3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/r111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blaise Pascal"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Al-Khwarizmi"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pythagoras"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r444"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Euclid"
                android:textStyle="bold" />
        </RadioGroup>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#4D5157" />


        <!--___________________Fourth Question_____________________-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q4.Which is the first country to win the FIFA World Cup"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/group4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/r1111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Italy"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r2222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Germany"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r3333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brazil"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r4444"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uruguay"
                android:textStyle="bold" />
        </RadioGroup>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#4D5157" />


        <!--___________________Fifth Question_____________________-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q5. 1, 3, 6, 10, 15,..."
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/group5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/r11111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="19"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r22222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r33333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/r44444"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22"
                android:textStyle="bold" />
        </RadioGroup>
        <!--______________________________________________________-->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="score"
            android:text="Score" />


    </LinearLayout>

</ScrollView>